/* 页面布局样式 */
.container {
  padding: 20px;
  background-color: #f4f4f4;
  min-height: 100vh;
  font-family: Arial, sans-serif; /* 使用简洁的字体 */
}

/* 顶部提示 */
.header {
  font-size: 22px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: bold;
  color: #333;
}

/* 热门分类区域样式 */
.recommended-categories {
  margin-bottom: 30px;
}

/* 热门分类标题 */
.recommended-categories .title {
  font-size: 20px;
  font-weight: 600;
  color: #FF5733; /* 热门分类使用突出颜色 */
  margin-bottom: 15px;
  text-align: left; /* 左对齐 */
  padding-left: 10px; /* 左边距 */
  border-bottom: 2px solid #FF5733; /* 下方有个细线条 */
}

/* 横向热门分类列表样式 */
.category-list-horizontal {
  display: flex;
  flex-direction: row;
  overflow-x: auto; /* 允许横向滚动 */
  gap: 15px;
  padding-left: 10px; /* 左侧边距 */
}

.category-item-horizontal {
  flex-shrink: 0; /* 防止内容收缩 */
  width: auto;
  padding: 10px;
}

.category-box-horizontal {
  padding: 12px 20px;
  border: 2px solid #FF5733;
  border-radius: 12px;
  background-color: #fff;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-box-horizontal:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.category-box-horizontal text {
  font-size: 16px;
  color: #333;
  display: block;
}

/* 所有分类区域样式 */
.all-categories {
  margin-bottom: 30px;
}

/* 所有分类标题样式 */
.all-categories .title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 15px;
  text-align: left;
  padding-left: 10px;
  border-bottom: 2px solid #ddd; /* 下方的细线条 */
}

/* 分类列表样式 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 15px;
  margin-bottom: 30px;
}

/* 单个分类样式 */
.category-item {
  width: 48%; /* 为了两列布局，宽度设为 48% */
}

.category-box {
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 12px;
  background-color: #fff;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-box:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.category-box text {
  font-size: 16px;
  color: #333;
  display: block;
  text-align: center;
}

/* 小按钮：我要发帖 */
.post-button {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}

/* 设置按钮为横向排列 */
.post-button button {
  padding: 12px 25px;
  background-color: #FF5733;
  color: white;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin: 0 5px; /* 添加左右边距 */
  width: 100%; /* 设置按钮宽度为 100% */
  max-width: 300px; /* 最大宽度为 300px，避免过大 */
}

.post-button button:hover {
  background-color: #ff1212;
}

.post-button button:disabled {
  background-color: #ddd;
  cursor: not-allowed;
}

/* 按钮点击效果 */
button:active {
  transform: scale(0.98); /* 按下时轻微缩小 */
}
