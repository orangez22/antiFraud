/* pages/complain/index/index.wxss */
page {
  background: rgba(245, 245, 245, 1);
}

.complaints-merchant {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.05);
  padding: 38rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}

.complaints-merchant-title {
  max-height: 84rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 42rpx;
  overflow: hidden;
}

.complaints-merchant-detail {
  overflow: hidden;
  border-top: 2rpx solid #EEEEEE;
}

.complaints-merchant-detail-title {
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 80rpx;
}

.complaints-merchant-detail textarea {
  width: 100%;
  height: 230rpx;
  background: rgba(248, 248, 248, 1);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #000;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}

.complaints-merchant-detail button {
  width: 112rpx;
  height: 48rpx;
  border-radius: 10rpx;
  border: 2rpx solid rgba(22, 119, 255, 1);
  text-align: center;
  line-height: 42rpx;
  padding: 0px;
  margin: 34rpx 0rpx 0rpx;
  font-size: 24rpx;
  color: rgba(22, 119, 255, 1);
  background: #fff;
  float: right;
}
