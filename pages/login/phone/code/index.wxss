.code-login-box {
	border-top: 2rpx solid rgba(0, 0, 0, 0.05);
	padding-bottom: 60rpx;
	box-sizing: border-box;
}

.code-login-box-top {
	padding-top: 88rpx;
	box-sizing: border-box;
}

.code-login-box-top image {
	width: 144rpx;
	height: 144rpx;
	display: block;
	margin: 0px auto;
}

.code-login-box-top-text {
	font-size: 28rpx;
	letter-spacing: 3rpx;
	line-height: 40rpx;
	color: rgba(36, 36, 36, 1);
	text-align: center;
	margin-top: 38rpx;
}

.code-login-box-center {
	padding: 130rpx 60rpx 0rpx;
	box-sizing: border-box;
}

.code-login-box-center-phone {
	border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
	display: flex;
	align-items: center;
	padding: 20rpx 0rpx;
	box-sizing: border-box;
}

.code-login-box-center-phone-86 {
	height: 44rpx;
	font-size: 32rpx;
	font-weight: 600;
	color: rgba(36, 36, 36, 1);
	line-height: 44rpx;
	width: 140rpx;
}

.code-login-box-center-phone-input {
	height: 44rpx;
	font-size: 32rpx;
	color: rgba(36, 36, 36, 1);
	line-height: 44rpx;
}

.code-login-box-center-password {
	padding: 20rpx 0rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.code-login-box-center-password-left {
	border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
	padding: 20rpx 0rpx;
	box-sizing: border-box;
}

.code-login-box-center-password-left input {
	height: 44rpx;
	font-size: 32rpx;
	color: rgba(36, 36, 36, 1);
	line-height: 44rpx;
}

.code-login-box-center-password-right {
	padding: 20rpx 0rpx;
	box-sizing: border-box;
}

.code-login-box-center-password-right-btn {
	line-height: 40rpx;
	height: 40rpx;
	font-size: 28rpx;
	width: 140rpx;
	background: #fff;
	border: none;
	padding: 0px;
	box-sizing: border-box;
}

.code-login-box-center-password-right-btn-active {
	color: #aaaaaa;
}

.code-login-box-center-login button {
	width: 482rpx;
	height: 84rpx;
	background: rgba(240, 34, 48, 1);
	border-radius: 42rpx;
	font-size: 28rpx;
	line-height: 65rpx;
	color: rgba(255, 255, 255, 1);
	margin: 108rpx auto 48rpx;
	letter-spacing: 4rpx;
}

.code-login-box-center-login text {
	height: 36rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(36, 36, 36, 1);
	line-height: 36rpx;
	text-align: center;
	width: 100%;
	display: block;
	letter-spacing: 3rpx;
}

.code-login-box-bottom {
	margin-top: 60rpx;
}

.code-login-box-bottom-title {
	display: flex;
