.exam-container {
  padding: 20px;
  background-color: #f9f9f9;
}

.countdown {
  text-align: center;
  font-size: 18px;
  color: #333;
  margin-bottom: 20px;
}

.question-list {
  margin-bottom: 30px;
}

.question-item {
  background-color: #fff;
  margin-bottom: 20px;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  color: #3c7aff;
  margin-bottom: 10px;
}

.question-type {
  font-weight: bold;
}

.question-body {
  margin-top: 10px;
}

.question-body text {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
}

.options {
  margin-top: 15px;
}

.options label {
  display: block;
  margin-bottom: 8px;
  font-size: 16px;
  color: #555;
}

.submit-btn {
  width: 100%;
  padding: 15px;
  background-color: #3c7aff;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.pagination button {
  padding: 8px 15px;
  background-color: #3c7aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 14px;
}

.pagination button:disabled {
  background-color: #ccc;
}

.pagination text {
  font-size: 14px;
  color: #333;
  margin: 0 10px;
}
