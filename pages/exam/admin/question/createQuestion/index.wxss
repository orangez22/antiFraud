.page {
  padding: 20px;
  background-color: #f5f5f5;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background-color: #fff;
  border-radius: 8px;
  border: 1px solid #ddd;
  font-size: 14px;
  color: #555;
}

.input {
  width: 100%;
  padding: 10px;
  margin-top: 10px;
  border-radius: 8px;
  border: 1px solid #ddd;
  background-color: #fff;
  font-size: 14px;
}

.options {
  margin-top: 10px;
}

.option {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.option text {
  font-size: 16px;
  color: #333;
  width: 30px; /* 控制A: B:等标签的宽度 */
}

.option input {
  flex: 1; /* 保证输入框填满剩余空间 */
  padding: 10px;
  margin-left: 5px;
  border-radius: 6px;
  border: 1px solid #ddd;
  font-size: 14px;
}

.remove-btn {
  margin-left: 10px;
  padding: 5px 10px;
  background-color: #e74c3c;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 12px;
}

.remove-btn:hover {
  background-color: #c0392b;
}

.add-btn {
  margin-top: 10px;
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 14px;
}

.add-btn:hover {
  background-color: #0056b3;
}

.submit-btn {
  margin-top: 20px;
  padding: 12px 0;
  background-color: #7a7772;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  width: 100%;
}

.submit-btn:active {
  background-color: #ff3c00;
}
