/* 页面整体容器 */
.form {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  box-sizing: border-box;
}

/* 表单项容器 */
.form-item {
  margin-bottom: 28rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

/* 表单项标签 */
.form-item text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

/* 举报类型选择器 */
.picker {
  width: 100%;
  height: 70rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: border-color 0.3s ease;
}

.picker:hover {
  border-color: #aaa;
}

/* 举报内容输入框 */
textarea {
  width: 100%;
  height: 160rpx;
  padding: 14rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  resize: none;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: border-color 0.3s ease;
}

textarea:focus {
  border-color: #ff4d00;
}

/* 手机号输入框 */
input {
  width: 100%;
  height: 70rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: border-color 0.3s ease;
}

input:focus {
  border-color: #ff4d00;
}

/* 提交按钮 */
.submit-button {
  margin-top: 40rpx;
  padding: 16rpx;
  background-color: #ff4d00;
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
  width: 100%;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.submit-button:hover {
  background-color: #ff8c1a;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.submit-button:disabled {
  background-color: #cccccc;
  cursor: not-allowed;
}

/* 定位和附件功能容器 */
.location-attachment {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

/* 定位和附件按钮 */
.location-button, .attachment-button {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
  background-color: #5f9dff;
  color: #fff;
  border-radius: 8rpx;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.location-button:hover, .attachment-button:hover {
  background-color: #4285f4;
}

.location-button:disabled, .attachment-button:disabled {
  background-color: #cccccc;
  cursor: not-allowed;
}

/* 定位信息 */
.location-info {
  font-size: 26rpx;
  color: #333;
  margin-top: 10rpx;
}

/* 已选择附件显示 */
.attachment-status {
  font-size: 26rpx;
  color: #333;
  margin-left: 12rpx;
}
