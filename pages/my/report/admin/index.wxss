/* 搜索栏样式 */
.search-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 10rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  outline: none;
}

.search-input:focus {
  border-color: #ff0800;
}

.search-btn {
  background-color: #ff0800;
  color: white;
  border: none;
  border-radius: 5rpx;
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
  transition: background-color 0.3s;
}

.search-btn:hover {
  background-color: #e00600;
}

/* 举报信息项 */
.info-item {
  display: flex;
  margin: 20rpx;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s;
}

.info-item:hover {
  background-color: #f1f1f1;
}

.info-image {
  width: 220rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.info-content {
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.info-description {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  flex-grow: 1;
}

.info-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.info-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 无内容提示 */
.no-content-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f9f9f9;
}

.no-content-text {
  font-size: 18px;
  color: #999;
  font-weight: 500;
  text-align: center;
  padding: 10px 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 底部分页 */
.pagination {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 5rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1000;
  padding: 10rpx 20rpx;
}

.pagination-text {
  font-size: 26rpx;
  color: #333;
}

.pagination-dropdown {
  font-size: 26rpx;
  color: #615c59;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
  cursor: pointer;
}

.pagination-input-container {
  display: flex;
  align-items: center;
}

.pagination-input {
  width: 80rpx;
  height: 40rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  margin: 0 10rpx;
}

.pagination-go-btn {
  font-size: 26rpx;
  color: #ffffff;
  background-color: #ff0800;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  margin-left: 10rpx;
}

/* 状态容器 */
.status-container {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  padding: 5px 10px;       /* 添加适当的内边距 */
  border-radius: 5px;      /* 可选：使背景角落圆润 */
  background-color: #888;
}

.status-text {
  font-size: 14px;  /* 状态文字大小 */
  color: #fff;      /* 状态文字颜色 */
}
/* 删除按钮 */
.delete-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff4d4f; /* 红色背景 */
  color: white; /* 白色文字 */
  font-size: 26rpx; /* 字体大小 */
  padding: 8rpx 20rpx; /* 内边距 */
  border-radius: 8rpx; /* 圆角 */
  border: none; /* 去掉边框 */
  cursor: pointer; /* 鼠标指针 */
  transition: background-color 0.3s ease; /* 背景颜色过渡效果 */
}

.delete-btn:hover {
  background-color: #e60000; /* 鼠标悬停时，背景色变为更深的红色 */
}

.delete-btn:active {
  background-color: #b30000; /* 按钮被点击时，背景色变为暗红色 */
}
