.form-container {
  padding: 20rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-picker,
.form-input,
.form-textarea {
  width: 100%;
  font-size: 26rpx;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 5rpx;
  background-color: #f9f9f9;
}

.submit-button {
  width: 100%;
  padding: 15rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff0000;
  border: none;
  border-radius: 5rpx;
  text-align: center;
}
/* 去除按钮的边框和背景 */
.toolbar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.toolbar button {
  background-color: transparent; /* 去掉背景色 */
  border: none; /* 去掉边框 */
  padding: 0; /* 去掉内边距 */
  cursor: pointer; /* 鼠标悬停时显示手指样式 */
}

.toolbar-icon {
  width: 40rpx; /* 图标大小 */
  height: 40rpx; /* 图标大小 */
  background-color: transparent; /* 图标背景透明 */
}
