/* 考试记录页面样式 */
.record-list {
  padding: 20rpx;
}

/* 每条考试记录的样式 */
.record-item {
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 记录内容 */
.record-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 记录标题 (考试名称) */
.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

/* 考试人员名称 */
.record-member {
  font-size: 28rpx;
  color: #00a2ff;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 分数 */
.record-score {
  font-size: 28rpx;
  color: #ff5722;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 考试时长 */
.record-duration {
  font-size: 24rpx;
  color: #666;
}

/* 没有考试记录时的样式 */
.no-content-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f9f9f9;
}

/* 无内容文本 */
.no-content-text {
  font-size: 18px;
  color: #999;
  font-weight: 500;
  text-align: center;
  padding: 10px 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 分页导航栏 */
.pagination {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 5rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1000;
  padding: 10rpx 20rpx;
}

/* 分页文本 */
.pagination-text {
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx;
}

/* 下拉选择框 */
.pagination-dropdown {
  font-size: 26rpx;
  color: #615c59;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
  cursor: pointer;
  margin-right: 20rpx;
}

/* 输入框容器 */
.pagination-input-container {
  display: flex;
  align-items: center;
}

/* 输入框 */
.pagination-input {
  width: 80rpx;
  height: 40rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  margin: 0 10rpx;
}

/* 跳转按钮 */
.pagination-go-btn {
  font-size: 26rpx;
  color: #ffffff;
  background-color: #ff0800;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  margin-left: 10rpx;
}
