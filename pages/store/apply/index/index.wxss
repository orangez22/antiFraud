  position: relative;
}

.store-submits-apply-city-item-border {
  font-size: 28rpx;
  width: 222%;
  margin-top:20rpx;
  box-sizing: border-box;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgb(221, 221, 221);
  padding: 0rpx 10rpx;
  position: relative;
}

.store-submits-apply-city-item-border-h {
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgb(221, 221, 221);
