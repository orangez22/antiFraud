/* pages/store/apply/index/index.wxss */
.store-submits-apply {
  padding: 15rpx;
  box-sizing: border-box;

}

.store-submits-applys {
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.store-submits-apply-top {
  border-bottom: 2rpx solid #EEEEEE;
}

.title {
  font-size: 30rpx;
  color: #333;
  line-height: 42rpx;
  font-weight: 600;
}

.number {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

.radio-box {
  padding: 12rpx 0rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.radio-box-text {
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
  font-weight: 600;
  float: left;
  display: block;
  margin-right: 10rpx;
}

.radio-one {
  color: #333333;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 60rpx;
  float: left;
}

.radio-one text {
  margin-top: 2rpx;
  float: left;
}

.radio-one radio {
  margin-right: 10rpx;
  float: left;
}

.radio-two {
  color: #333333;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
}

.radio-two text {
  float: left;
  margin-top: 2rpx;
}

.radio-two radio {
  margin-right: 10rpx;
  float: left;
}

.store-submits-apply-bottom {}

.store-submits-apply-info {}

.store-submits-apply-info-txt {
  font-size: 28rpx;
  color: #000000;
  line-height: 70rpx;
  font-weight: 600;
  margin-right: 10rpx;

}

.store-submits-apply-info-input {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgb(221, 221, 221);
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.store-submits-apply-info-textarea{
  width: 100%;
  /* height:300rpx; */
  height:auto!important;
  _height:80rpx;
  min-height:80rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgb(221, 221, 221);
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
/* 	textarea::-webkit-input-placeholder{
    padding: 10rpx;
} */

.store-submits-apply-info-input-input {
  padding: 0;
  margin: 0;
  outline: none;
  border: none;
  width: calc(100% - 60rpx);
  height: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  font-size: 30rpx;
  /* line-height: 80rpx; */

}

.store-submits-apply-info-input-close {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #C6C6C6;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.store-submits-apply-info-input uni-picker {
  padding: 0;
  margin: 0;
  outline: none;
  border: none;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  position: relative;
}

.store-submits-apply-info-input uni-picker::after {
  content: "";
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-left: 5rpx solid #C6C6C6;
  border-top: 5rpx solid #C6C6C6;
  transform: translate3d(0, -50%, 0) rotateZ(225deg);
  -webkit-transform: translate3d(0, -50%, 0) rotateZ(225deg);
  margin-top: -4rpx;
}

.store-submits-apply-info-input picker {
  padding: 0;
  margin: 0;
  outline: none;
  border: none;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  position: relative;
}

.store-submits-apply-info-input picker::after {
  content: "";
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-left: 5rpx solid #C6C6C6;
  border-top: 5rpx solid #C6C6C6;
  transform: translate3d(0, -50%, 0) rotateZ(225deg);
  -webkit-transform: translate3d(0, -50%, 0) rotateZ(225deg);
  margin-top: -4rpx;
}

.store-submits-apply-city {
  display: flex;
  flex-direction: column;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.store-submits-apply-city-item {
  width: 100%;
}

.store-submits-apply-city-item-txt {
  font-size: 28rpx;
  color: #000000;
  line-height: 70rpx;
  font-weight: 600;
  margin-right: 10rpx;
}

.store-submits-apply-city uni-picker {
  font-size: 28rpx;
  width: 192rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgb(221, 221, 221);
