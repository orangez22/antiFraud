<view>
  <!-- 搜索框 -->
  <view class="search-box">
    <input class="search-input" type="text" placeholder="请输入搜索内容" bindinput="onSearchInput" />
    <button class="search-btn" bindtap="onSearchClick">搜索</button>
  </view>

  <!-- 轮播图 -->
  <swiper indicator-dots="true" autoplay="true" interval="2000" duration="500" circular="true" class="swiper">
    <swiper-item wx:for="{{swiperList}}" wx:key="index">
      <navigator class="swiper-item" url="/subpkg/goods_detail/goods_detail?goods_id={{item.goods_id}}">
        <image class="swiper-image" src="/assets/images/index{{item.image_src}}" alt="轮播图" />
      </navigator>
    </swiper-item>
  </swiper>

  <!-- 其他内容，展示反诈科普相关内容 -->
  <view class="info">
    <view class="section-title">反诈科普</view>
    <view class="content-box">
      <view class="content-item" bindtap="goToDetail">
        <image src="/images/sample1.jpg" />
        <text>防骗小技巧1</text>
      </view>
      <view class="content-item" bindtap="goToDetail">
        <image src="/images/sample2.jpg" />
        <text>防骗小技巧2</text>
      </view>
      <view class="content-item" bindtap="goToDetail">
        <image src="/images/sample2.jpg" />
        <text>防骗小技巧3</text>
      </view>
      <view class="content-item" bindtap="goToDetail">
        <image src="/images/sample2.jpg" />
        <text>防骗小技巧4</text>
      </view>
    </view>
  </view>
</view>
