/* 反诈科普内容样式 */
.section-title {
  font-size: 44rpx; /* 增大字体大小，可根据实际需求调整数值 */
  font-weight: bold;
  margin: 30rpx 0 20rpx 20rpx;
  color: #333;
  text-align: center; /* 添加这行，让文本内容居中显示 */
}

.info-item {
  display: flex;
  margin: 20rpx;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-image {
  width: 220rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.info-content {
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.info-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.more-btn {
  font-size: 14px;
  color: #615c59;
  cursor: pointer;
}
/* 容器居中并设置背景 */
.no-content-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; /* 使其在页面中垂直居中 */
  background-color: #f9f9f9; /* 可以设置一个淡灰色背景 */
}

/* 文本样式 */
.no-content-text {
  font-size: 18px;
  color: #999; /* 灰色字体 */
  font-weight: 500;
  text-align: center;
  padding: 10px 20px;
  border: 1px solid #ddd; /* 边框 */
  border-radius: 8px; /* 圆角 */
  background-color: #fff; /* 白色背景 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 轻微阴影 */
}
/* 底部分页导航栏 */
.pagination {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 5rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1000;
  padding: 10rpx 20rpx;
}
.pagination-text {
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx; /* 给每个文本元素右侧增加一些间距 */
}

.pagination-dropdown {
  font-size: 26rpx;
  color: #615c59;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
  cursor: pointer;
  margin-right: 20rpx; /* 给下拉框右侧增加间距 */
}

.pagination-input-container {
  display: flex;
  align-items: center;
}

.pagination-input {
  width: 80rpx;
  height: 40rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  margin: 0 10rpx; /* 微调输入框左右的间距 */
}

.pagination-go-btn {
  font-size: 26rpx;
  color: #ffffff;
  background-color: #ff0800;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  margin-left: 10rpx; /* 给按钮左侧增加一点间距 */
}