<view class="page">
  <view class="form-container">
    <input class="input-field" placeholder="标题" bindinput="onTitleInput" />
    <textarea class="textarea-field" placeholder="请输入内容" bindinput="onContentInput"></textarea>
    <input class="input-field" placeholder="作者名称" bindinput="onAuthorInput" />
    
    <!-- 图片上传部分 -->
    <view class="image-upload-container">
      <button class="choose-image-btn" bindtap="onImageInput">选择图片</button>
      <text class="image-url-text">{{image ? '已选择图片' : '请选择图片'}}</text>
    </view>

    <button class="submit-btn" bindtap="onSubmit">提交</button>
  </view>
</view>
