/* 页面容器 */
.page {
  padding: 30px;
  background-color: #f5f5f5;
  font-family: Arial, sans-serif;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 表单容器 */
.form-container {
  background-color: #ffffff;
  padding: 25px;
  border-radius: 15px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600px;
  margin-top: 20px;
}

/* 输入框样式 */
.input-field,
.textarea-field {
  width: 88%;
  margin-bottom: 20px;
  padding: 12px;
  font-size: 16px;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  background-color: #f9f9f9;
  transition: border-color 0.3s ease;
}

/* 输入框聚焦时的样式 */
.input-field:focus,
.textarea-field:focus {
  border-color: #007aff;
  background-color: #ffffff;
  outline: none;
}

/* 文本区域 */
.textarea-field {
  height: 160px;
  line-height: 1.6;
  resize: none;
}

/* 图片上传容器 */
.image-upload-container {
  margin-bottom: 20px;
}

/* 图片选择按钮 */
.choose-image-btn {
  width: 88%;
  padding: 8px;
  font-size: 16px;
  background-color: #ff9900;
  color: white;
  border-radius: 10px;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

/* 图片选择按钮悬停 */
.choose-image-btn:hover {
  background-color: #005bb5;
}

/* 图片选择状态文本 */
.image-url-text {
  margin-top: 10px;
  font-size: 14px;
  color: #888;
  text-align: center;
}

/* 提交按钮样式 */
.submit-btn {
  width: 90%;
  padding: 16px;
  font-size: 18px;
  background-color: #f32525;
  color: white;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

/* 提交按钮悬停时的样式 */
.submit-btn:hover {
  background-color: #ff1a1a;
  transform: translateY(-3px);
}

/* 提交按钮禁用状态 */
.submit-btn:disabled {
  background-color: #cccccc;
  cursor: not-allowed;
  transform: none;
}
