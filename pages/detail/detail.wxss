.container {
  padding: 20px;
  background-color: #fff;
}

.article-title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.article-meta {
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 20px;
}

.meta-item {
  padding: 0 5px;
}

.meta-separator {
  padding: 0 5px;
  color: #ccc;
}

.article-content {
  font-size: 16px;
  line-height: 1.6;
  text-indent: 2em;
  color: #333;
}
/*收藏*/
.favorite-container {
  margin-top: 30rpx;
  text-align: center;
}

.favorite-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  border: none;
  background-color: transparent;
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.favorite-text {
  font-size: 28rpx;
  color: #555;
}

