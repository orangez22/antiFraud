.container {
  padding: 20px;
  background-color: #fff;
}

.article-title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.article-meta {
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 20px;
}

.meta-item {
  padding: 0 5px;
}

.meta-separator {
  padding: 0 5px;
  color: #ccc;
}

.article-content {
  font-size: 16px;
  line-height: 1.6;
  text-indent: 2em;
  color: #333;
}
