.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.article-title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.article-meta {
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 20px;
}

.meta-item {
  padding: 0 5px;
}

.meta-separator {
  padding: 0 5px;
  color: #ccc;
}

/* 改进的分割线样式 */
.comments-divider {
  margin: 30px 0;
  padding: 10px 0;
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  color: #555;
  border-top: 1px solid #ddd;
}

.comments-count {
  color: #ff0000;
}

.comments-section {
  margin-top: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

.publish-comment {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;  /* 使评论框居中 */
  justify-content: center;  /* 垂直居中 */
}

.comment-input {
  width: 100%;
  height: 80px;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 14px;
}

.comment-avatar {
  width: 30px;       /* 设置头像的宽度 */
  height: 30px;      /* 设置头像的高度 */
  border-radius: 50%; /* 圆形效果 */
  margin-right: 10px; /* 与用户名之间的间距 */
}
.comment-actions {
  margin-top: 5px;
  font-size: 12px;
  color: #888;
  display: flex;
  gap: 10px; /* 设置操作按钮的间距 */
}

.action-reply,
.action-delete {
  cursor: pointer;
  color: #85807f; /* 蓝色文字 */
}

.action-reply:hover,
.action-delete:hover {
  color: #0056b3; /* 悬停时深蓝色 */
}
.publish-btn {
  background-color: #ff0000;
  color: #fff;
  padding: 10px 15px;
  border-radius: 5px;
  font-size: 14px;
  cursor: pointer;
  border: none;
}

.comment-list {
  margin-top: 10px;
}

.comment {
  margin-bottom: 15px;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.comment:last-child {
  border-bottom: none;
}

/* 父评论 */
.parent-comment {
  font-size: 16px; /* 父评论的字体稍大 */
  padding-left: 15px; /* 稍微偏移 */
}

/* 子评论 */
.child-comment {
  font-size: 14px; /* 子评论的字体比父评论小 */
  padding-left: 20px; /* 子评论偏移 */
}

/* 孙评论 */
.grandchild-comment {
  font-size: 13px;       /* 适度减小字体 */
  padding-left: 25px;    /* 更深的缩进 */
  line-height: 1.6;      /* 增加行高，避免内容太紧凑 */
  margin-top: 10px;      /* 增加上边距，避免和子评论挤在一起 */
  margin-bottom: 10px;   /* 增加下边距 */
  padding: 10px;         /* 增加内边距，给内容一点空间 */
  border-radius: 5px;    /* 圆角效果 */
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.comment-author {
  font-weight: bold;
  color: #141414;
  margin-right: 10px;
}

.comment-time {
  font-size: 12px;
  color: #aaa;
}

.comment-content {
  font-size: 14px;
  color: #333;
  
}

.nested-comments {
  margin-top: 10px;
  
}

.load-more {
  color: #007bff;
  text-align: center;
  margin-top: 15px;
  cursor: pointer;
}


/* 提交按钮悬停效果 */
.reply-btn:hover {
  background-color: #e60000;     /* 悬停时背景色更深 */
}

/* 提交按钮悬停时效果 */
.reply-comment .submit-reply:hover {
  color: #fff;
  background-color: #0056b3;     /* 悬停时改变背景色 */
}
/* 回复框 */
.reply-box {
  margin-top: 20px;
  background-color: #f1f1f1;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  font-family: 'Arial', sans-serif;
}

/* 回复框标题 */
.reply-box-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
}

.reply-box-title::before {
  content: '💬';
  margin-right: 8px;
}

/* 回复框内的输入框 */
.reply-box textarea {
  width: 100%;
  padding: 8px;
  border-radius: 8px;
  border: 1px solid #ddd;
  background-color: #fff;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12px;
  box-sizing: border-box;
  resize: none;
  min-height: 60px;
  transition: border-color 0.3s ease;
}

.reply-box textarea:focus {
  border-color: #007bff;
  outline: none;
}

/* 按钮容器，使用 Flexbox 布局 */
.reply-box-buttons {
  display: flex;
  justify-content: flex-start; /* 左对齐 */
  gap: 22px; /* 按钮之间的空隙 */
}

/* 发布回复按钮 */
.reply-box button {
  background-color: #ff2600;
  color: white;
  padding: 6px 12px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  font-size: 10px;
  transition: background-color 0.3s ease;
}

.reply-box button:hover {
  background-color: #0056b3;
}

/* 取消回复按钮 */
.reply-box .cancel-btn {
  background-color: #f7f7f7;
  color: #ff2600;
  padding: 6px 12px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
  font-size: 10px;
}

.reply-box .cancel-btn:hover {
  background-color: #e1e1e1;
}
