.container {
  padding: 20px;
  background-color: #fff;
}

.article-title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.article-meta {
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 20px;
}

.meta-item {
  padding: 0 5px;
}

.meta-separator {
  padding: 0 5px;
  color: #ccc;
}

article-content {
  font-size: 16px;
  line-height: 1.6;
  text-indent: 2em;
  color: #333;
}

/* 富文本的样式 */
mp-html {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
}

/* 评论区域 */
.comments-section {
  margin-top: 20px;
  padding-bottom: 100px; /* 预留空间给固定的评论区 */
}

.comments-count {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.comment-list {
  margin-top: 20px;
}

.comment {
  margin-bottom: 15px;
}

.comment-header {
  display: flex;
  justify-content: space-between;
}

.comment-author {
  font-weight: bold;
  color: #007bff;
}

.comment-time {
  font-size: 12px;
  color: #aaa;
}

.comment-content {
  font-size: 14px;
  color: #333;
}

.nested-comments {
  margin-top: 10px;
  margin-left: 20px;
}

/* 固定在页面底部的评论区 */
.publish-comment {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 15px;
  border-top: 1px solid #ccc;
}

.comment-input {
  width: 100%;
  height: 100px;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.publish-btn {
  background-color: #007bff;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
}
